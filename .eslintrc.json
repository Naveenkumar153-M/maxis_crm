{
	"plugins": [
		"cypress"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"requireConfigFile": false
	},
	"rules": {
		"cypress/no-assigning-return-values": "off",
		"cypress/no-unnecessary-waiting": "off",
		"cypress/assertion-before-screenshot": "warn",
		"cypress/no-async-tests": "off",
		"no-console": 2,
		"no-empty": 2,
		"no-extra-semi": 2,
		"no-func-assign": 2,
		"no-inner-declarations": 2,
		"no-unreachable": 2,
		"no-unsafe-negation": 2,
		"use-isnan": 2,
		"valid-jsdoc": 1,
		"default-case": 1,
		"eqeqeq": 2,
		"no-alert": 1,
		"no-else-return": 1,
		"no-empty-function": 2,
		"no-empty-pattern": 2,
		"no-eq-null": 2,
		"no-multi-spaces": 1,
		"no-multi-str": 2,
		"no-param-reassign": 1,
		"no-redeclare": 2,
		"no-self-assign": 1,
		"no-sequences": 1,
		"no-useless-return": 1,
		"no-unused-vars": 1,
		"no-use-before-define": 1,
		"no-mixed-requires": 1,
		"no-new-require": 2,
		"array-bracket-spacing": ["error", "never"],
		"block-spacing": [1, "always"],
		"brace-style": [1, "1tbs"],
		"camelcase": [2, {
			"properties": "always"
		}],
		"comma-spacing": [1, {
			"before": false,
			"after": true
		}],
		"newline-before-return": 1,
		"arrow-body-style": [1, "as-needed"],
		"no-duplicate-imports": 2
	},
	"env": {
		"cypress/globals": true
	},
	"extends": [
		"plugin:cypress/recommended"
	]
}
